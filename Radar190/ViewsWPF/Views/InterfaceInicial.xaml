        mc:Ignorable="d"
        Title="InterfaceInicial" Height="405.333" Width="331.333">
    <Grid>
        <Label x:Name="lblTitulo" Content="Radar 190" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" IsEnabled="False" FontSize="16" FontFamily="Arial" Foreground="Black" Background="{x:Null}">
