                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Label.OpacityMask>
        </Label>
        <Button x:Name="btnCadastro" Content="Cadastre-se" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnChat" Content="Chat" HorizontalAlignment="Left" Margin="238,53,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnContatos" Content="Contatos de Emergência" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" Width="137"/>
        <Button x:Name="btnDicas" Content="Dicas de Segurança" HorizontalAlignment="Left" Margin="176,335,0,0" VerticalAlignment="Top" Width="137"/>
        <Button x:Name="btnFeedback" Content="Fale Conosco" HorizontalAlignment="Left" Margin="238,15,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnVitima" Content="Vítima" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnTestemunha" Content="Testemunha" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Width="79"/>
        <Button x:Name="btnMapa" Content="Mapa do Crime" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="137"/>
        <Button x:Name="btnRanking" Content="Ranking do Crime" HorizontalAlignment="Left" Margin="176,90,0,0" VerticalAlignment="Top" Width="137"/>
        <Label x:Name="lblMapa1" Content="Espaço do Google Maps" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblMapa2" Content="Espaço do Google Maps" HorizontalAlignment="Left" Margin="10,298,0,0" VerticalAlignment="Top"/>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="sirene.jpg"
                AlignmentY="Top" AlignmentX="Center" Opacity="0.2"/>
        </Grid.Background>

    </Grid>
</Window>
